# Application Settings
APP_NAME=diagram-service
APP_VERSION=0.1.0
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false

# Device Configuration
# Options: cpu, cuda
DEVICE=cpu

# Model Paths
YOLO_MODEL_PATH=models/yolov8/yolov8n.pt
PADDLE_OCR_LANG=ru,en

# Processing Settings
MAX_IMAGE_SIZE=1920
CONFIDENCE_THRESHOLD=0.5
OCR_CONFIDENCE_THRESHOLD=0.6

# API Settings
MAX_UPLOAD_SIZE=10485760  # 10 MB in bytes
CORS_ORIGINS=*
API_PREFIX=/api/v1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Template Settings
TEMPLATE_DIR=templates

# Performance
WORKERS=1
TIMEOUT=300
